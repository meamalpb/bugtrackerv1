<h1>New Issue</h1>

<%= form_with(model: [ @project, @project.issues.build ],class: 'form-group')  do |f| %>
<div class="form-group">
  <%= f.label :Title, class: 'form-label' %>
  <%= f.text_field :Title, class: 'form-control' %>
</div>
<br>
<div class="form-group">
  <%= f.label :Severity, class: 'form-label' %>
  <%= f.select :Severity, ['low', 'medium', 'high'] , class: 'form-control'%>
  </div>
  <br>
<div class="form-group">
  <%= f.label :body, class: 'form-label' %>
  <%= f.text_area :body, class: 'form-control' %>
</div>
<br>
<div class="form-group">
  <%= f.label :assigned_id, class: 'form-label' %>
  <%= f.collection_select :assigned_id, @project.users, :id, :name , class: 'form-control'%>
</div>
<br>
<div class="form-group">
  <%= f.submit"Create", class: 'btn btn-primary' %>
  </div>
<% end %>
