<div class="accordion" id="accordionExample">
  <div id="<%= dom_id(project) %>">
    <div class="accordion-item">
      <h2 class="accordion-header" id="heading<%= dom_id(project) %>">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= dom_id(project) %>" aria-expanded="false" aria-controls="collapse<%= dom_id(project) %>">
          <%= project.name %>
        </button>
      </h2>
      <div id="collapse<%= dom_id(project) %>" class="accordion-collapse collapse" aria-labelledby="heading<%= dom_id(project) %>" data-bs-parent="#accordionExample">
        <div class="accordion-body"><%= project.Description %>
          <br>
          <%= link_to "Show this project", project, class: "btn btn-primary btn-sm" %>
        </div>
      </div>
    </div>
  </div>
</div>
